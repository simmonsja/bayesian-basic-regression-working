      "source": [
        "#| echo: false\n",
        "# plot the mean prediction of the model against the observed data\n",
        "plot_df = pd.DataFrame({\n",
        "    \"dW\": df[\"dW\"],\n",
        "    \"dW_pred\": fit_int_smoothie.posterior[\"mu\"].mean(dim=[\"chain\", \"draw\"]).values,\n",
