    {
      "cell_type": "code",
      "metadata": {},
      "source": [
        "#| output: false\n",
        "\n",
        "# Define the variables we are interested in\n",
        "cases = [ \"dW_exposed\",\"dW_partially\", \"dW_sheltered\"]\n",
        "id_vars = [\"Onset\",\"Eocum\",\"WLres\",\"Tpeak\",\"Dpo\"] # our covariates and Onset for sanity\n",
        "pre_vars = [\"Wpre{}\".format(_[2:]) for _ in cases]"
